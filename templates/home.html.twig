{% extends "layout.html.twig" %}

{% block body %}
    <a href="{{ path('todo_form') }}">Cr√©er une todo</a>
    <br>
    <ul>
        {% for todo in todos %}
            <li>
                <span>{{todo.id}}</span>
                <span>{{todo.content}}</span>
                <span>{{todo.done}}</span>
                <span>{{todo.createdAt | date()}}</span>
                <a href="{{ path('todo_edit', {id:todo.id}) }}">Edit</a>
                <a href="{{ path('todo_remove', {id:todo.id}) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}