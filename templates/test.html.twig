{% extends "./layout.html.twig" %}

{% block content %}
	{{include('./partials/_profile.html.twig', { user:author })}}

	<h2>Last update :
		{{ product.lastUpdate | date('d/m/Y') }}</h2>
	<h2>Last update :
		{{ product.lastUpdate | format_datetime('full','full', locale='fr') }}</h2>
	<h2>Name :
		{{ product.name }}</h2>
	<h2>Prix :
		{{ product.price }}</h2>
	{% if product.price > 10000 %}
		<h3>Chero</h3>
	{% endif %}

	<h2>{{'bonjour' | upper }}</h2>
	<h2>{{'bonjour' | capitalize }}</h2>
	<h2>{{h1 | raw }}</h2>
	<h2>{{ [1,2,3] | join(',') }}</h2>
	<h2>{{ [1,2,3] | map(x => x * 2) | join(' ')}}</h2>
	{% for item in [1,2,3] | filter(x => x > 1) %}
		{{item}}
	{% endfor %}

	<img src="{{ asset('image.jpg') }}" alt="">

	<a href="{{ path('about', {name:'jean'}) }}">Lien</a>
{% endblock %}
